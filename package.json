{
  "name": "talktomachine-platform",
  "version": "1.0.0",
  "description": "AI-powered multilingual chat platform with Tanglish support",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "npm run build && npm run test && echo 'Deploying to staging...'",
    "deploy:production": "npm run build && npm run test && echo 'Deploying to production...'",
    "docker:build": "docker build -t talktomachine .",
    "docker:run": "docker run -p 3000:3000 talktomachine",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "language:demo": "npx ts-node src/modules/query/demo.ts",
    "monitor": "node scripts/monitor.js",
    "monitor:watch": "watch 'npm run monitor' scripts/",
    "setup": "node scripts/setup.js",
    "webhook": "node scripts/webhook-handler.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build"
  },
  "keywords": [
    "ai",
    "chat",
    "multilingual",
    "tanglish",
    "mern"
  ],
  "author": "TalkToMachine Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/franc": "^5.0.3",
    "@types/jest": "^29.5.4",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
